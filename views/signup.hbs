{{#if error}}
<h2 class="error">{{error}}</h2>
{{/if}}
<form action="/signup" method="POST">
    <div>
        <div class="label">First Name: </div><input type="text" required id="firstName" name="firstName" size="50"></input>
    </div>
    <div>
        <div class="label">Last Name: </div><input type="text" required id="lastName" name="lastName" size="50"></input>
    </div>
    <div>
        <div class="label">Login Id: </div><input type="text" required id="login" name="login" size="50"></input>
    </div>
    <div>
        <div class="label">Password: </div><input type="password" required id="password" name="password" size="50"></input>
    </div>
    
    <input type="submit" id="done"   name="done" value="Signup!"></input>
</form>